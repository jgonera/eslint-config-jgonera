{
  "name": "eslint-config-jgonera",
  "version": "1.0.0",
  "description": "ESLint config for TypeScript",
  "type": "module",
  "main": "eslint.config.ts",
  "scripts": {
    "deps:check": "ncu",
    "deps:update": "ncu -u",
    "format": "eslint --fix && prettier --write \"./**/*.{js,json,md}\"",
    "lint": "eslint && prettier --check \"./**/*.{js,json,md}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jgonera/eslint-config-jgonera.git"
  },
  "author": "Juliusz Gonera",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jgonera/eslint-config-jgonera/issues"
  },
  "homepage": "https://github.com/jgonera/eslint-config-jgonera#readme",
  "dependencies": {
    "@eslint/js": "^9.21.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jiti": "^2.6.1",
    "typescript-eslint": "8.46.3"
  },
  "devDependencies": {
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^24.10.2",
    "eslint": "^9.39.1",
    "npm-check-updates": "^19.1.2",
    "prettier": "^3.7.4",
    "prettier-config-jgonera": "github:jgonera/prettier-config-jgonera#main",
    "typescript": "^5.9.3"
  },
  "prettier": "prettier-config-jgonera"
